{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "types": ["node"],
    "rootDir": ".",
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": false,
    "declaration": true,
    "target": "es2021",
    "noEmit": false,
    "paths": {
      "@app/shared": ["src/shared"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts"]
}
